class Solution:
    def mergeAlternately(self, word1: str, word2: str) -> str:
        m=len(word1)
        n=len(word2) 
        s=max(m,n)
        res=[] 
        for i in range(s):
            if i < m:
                res.append(word1[i])
            if i < n:
                res.append(word2[i])
        return "".join(res)  
